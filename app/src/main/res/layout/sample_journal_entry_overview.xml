<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="386dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/rectangle_2"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/entryTitle"
        android:layout_width="174dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="166dp" />

    <TextView
        android:id="@+id/entryFirstLine"
        android:layout_width="314dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:text="This should be the first line of your entry"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/entryTitle"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/entryDate"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="11/9/23"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/entryFirstLine"
        tools:layout_editor_absoluteX="204dp" />
</androidx.constraintlayout.widget.ConstraintLayout>